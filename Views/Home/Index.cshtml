<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center">
                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Recepcjonista") || User.IsInRole("Mechanik")))
                    {
                        <div class="text-center mt-5">
                            @if (User.IsInRole("Admin"))
                            {
                                <h2 class="mb-4">Witaj, Administratorze!</h2>
                                <a class="btn btn-primary btn-lg mt-2 px-4" href="/Admin/Panel">
                                    <i class="bi bi-speedometer2"></i> Panel administratora
                                </a>
                            }
                            else if (User.IsInRole("Recepcjonista"))
                            {
                                <h2 class="mb-4">Witaj, Recepcjonisto!</h2>
                                <a class="btn btn-primary btn-lg mt-2 px-4" href="/Receptionist/Panel">
                                    <i class="bi bi-journal-text"></i> Panel recepcjonisty
                                </a>
                            }
                            else if (User.IsInRole("Mechanik"))
                            {
                                <h2 class="mb-4">Witaj, Mechaniku!</h2>
                                <a class="btn btn-primary btn-lg mt-2 px-4" href="/Mechanic/Panel">
                                    <i class="bi bi-wrench"></i> Panel mechanika
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <h1 class="display-5 mb-4 text-primary fw-bold animate__animated animate__fadeInDown">
                            skibidi service zone
                        </h1>
                        <p class="lead mb-4">
                            Nasz warsztat oferuje <span class="fw-bold text-success">kompleksowe usługi naprawy i serwisu samochodów</span>. Dbamy o Twój pojazd, zapewniając <span class="text-info">profesjonalną obsługę</span>, <span class="text-warning">szybkie terminy</span> i <span class="text-danger">indywidualne podejście</span> do każdego klienta.
                        </p>
                        <div class="mb-4">
                            <video class="img-fluid rounded shadow-sm" style="max-height: 300px;" autoplay loop muted playsinline>
                                <source src="/videos/XD.mp4" type="video/mp4">
                                Twoja przeglądarka nie obsługuje tagu wideo.
                            </video>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Klient"))
                            {
                                <div class="alert alert-info mt-3 shadow-sm">
                                    <i class="bi bi-person"></i> Witaj, <span class="fw-bold">Kliencie</span>! Sprawdź status swoich zleceń i historię napraw.
                                </div>
                                <a class="btn btn-primary btn-lg mt-2 px-4" href="/Client/Panel">
                                    <i class="bi bi-clipboard-data"></i> Panel klienta
                                </a>
                            }
                        }
                        else
                        {
                            <div class="alert alert-secondary mt-3 shadow-sm">
                                <i class="bi bi-box-arrow-in-right"></i> Nie jesteś zalogowany. <span class="fw-semibold">Zaloguj się, aby uzyskać dostęp do swojego panelu.</span>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>

