@model WorkshopManager.Models.PartOrder
@{
    ViewData["Title"] = "Zamów część";
}

<h2>Zamów część</h2>

@if (TempData["OrderPartSuccess"] != null)
{
    <div class="alert alert-success">@TempData["OrderPartSuccess"]</div>
}

<form asp-action="OrderParts" method="post">
    <div class="mb-3">
        <label asp-for="Brand" class="form-label">Marka</label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Model" class="form-label">Model</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PartNumber" class="form-label">Nr części (opcjonalnie)</label>
        <input asp-for="PartNumber" class="form-control" />
        <span asp-validation-for="PartNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Ilość</label>
        <input asp-for="Quantity" class="form-control" type="number" min="1" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Opis</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zamów</button>
    <a asp-controller="Mechanic" asp-action="Panel" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

